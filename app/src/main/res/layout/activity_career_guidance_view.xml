<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34013f"
    android:padding="10dp"
    tools:context=".CareerGuidanceView">

    <Button
        android:id="@+id/BtnBack"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/BtnBack"
        android:layout_marginTop="50dp"
        android:text="Career Guidance"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/careerAssessmentBtn"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/button_corners"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt1"
        android:text="JOB MARKET INSIGHTS"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/resumeBuilderBtn"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/button_corners"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/careerAssessmentBtn"
        android:text="RESUME BUILDER"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/interviewPreparationBtn"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/button_corners"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/resumeBuilderBtn"
        android:text="INTERVIEW PREPARATION"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="50dp"/>


</RelativeLayout>