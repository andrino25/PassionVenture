<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34013f"
    tools:context=".HomePageMentorView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="76dp"
            android:layout_height="97dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/p_2_" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imageView22"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Welcome Gordon!"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/imageView22"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginEnd="20dp"
            android:src="@drawable/gordon7"
            app:shapeAppearanceOverlay="@style/roundedImageView2"/>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/textView2"
            android:background="@color/white"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Published Contributions"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:layout_below="@id/textView3"
                android:src="@drawable/gordon1"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView3"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gordon4" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/textView3"
                app:srcCompat="@drawable/gordon3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imageView6"
                android:text="Healthy Cooking Tips And recipe and suggestion"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/imageView6"
                android:textSize="8dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="10 Tips For improve your cooking"
                android:textColor="@color/black"
                android:layout_alignStart="@id/imageView7"
                android:layout_below="@+id/imageView7"
                android:textSize="8dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="10 Life Changing Cooking Tips that will Save You Time and..."
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_alignStart="@id/imageView8"
                android:layout_below="@+id/imageView8"
                android:textSize="8dp"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/relative1"
            android:background="@color/white"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Your Drafts"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/textView7"
                android:src="@drawable/gordon5"/>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView7"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gordon6" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView7"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/gordon7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imageView9"
                android:text="Efficient ways on Getting meat of a crab"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/imageView9"
                android:textSize="8dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="How to make Proper Make an Egg and Fried Rice"
                android:layout_alignStart="@id/imageView10"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/textView8"
                android:layout_below="@+id/imageView10"
                android:textSize="8dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="How to season your Meat Nicely"
                android:textColor="@color/black"
                android:layout_alignStart="@id/imageView11"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/imageView11"
                android:textSize="8dp"
                android:textStyle="bold"
                />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>