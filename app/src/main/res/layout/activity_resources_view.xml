<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#460F52"
    tools:context=".ResourcesView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#460F52"
            >

            <TextView
                android:id="@+id/TextResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="125dp"
                android:text="Resources"
                android:textColor="#fff"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="85dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/p_2_" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/TextResources"
                android:background="@color/white"
                android:paddingRight="270dp" />

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchBar"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                >

                <RelativeLayout
                    android:id="@+id/relative6"
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/TextRecent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:text="Recent"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn1"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:layout_below="@id/TextRecent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:layout_marginStart="18dp" />

                    <ImageButton
                        android:id="@+id/btn2"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_below="@id/TextRecent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-12dp"/>

                    <ImageButton
                        android:id="@+id/btn3"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:layout_below="@id/TextRecent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />

                    <TextView
                        android:id="@+id/TextBtn1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn1"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        android:text="Healthy Cooking
                              Tips and Recipe
                              Suggestion"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/TextBtn2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn2"
                        android:layout_alignStart="@id/btn2"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="10 Top Tips to
                              Improve your
                              Cooking"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextBtn3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn3"
                        android:layout_alignStart="@id/btn3"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/TextBtn2"
                        android:text="20 Life Changing
                              Cooking tips
                              That Will Save
                              Your Time and ..."
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative6"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="199dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/TextRecommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:text="Recommended for you"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btn4"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:layout_below="@id/TextRecommended"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="18dp" />

                        <ImageButton
                            android:id="@+id/btn5"
                            android:layout_width="120dp"
                            android:layout_height="105dp"
                            android:layout_below="@id/TextRecommended"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp" />

                        <ImageButton
                            android:id="@+id/btn6"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:layout_below="@id/TextRecommended"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:id="@+id/TextBtn4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn4"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:text="8 Simple Ways To
                              Hack Healthy
                              Home Cooking,
                              According ..."
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/TextBtn5"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn5"
                            android:layout_alignStart="@id/btn5"
                            android:layout_marginStart="5dp"
                            android:layout_centerInParent="true"
                            android:text="Cooking &amp; Food
                              Preparation Tips
                              &amp; Tricks"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextBtn6"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn6"
                            android:layout_alignStart="@id/btn6"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="5dp"
                            android:text="Want to Be a
                              Better Cook?
                              Trust Your
                              Senses."
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative5"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="199dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/TextContributors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:text="Top Contributors"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn18"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/pfimage1_removebg_preview"
                            android:layout_below="@id/TextContributors"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="18dp" />

                        <Button
                            android:id="@+id/btn19"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/TextContributors"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/pfimage2_removebg_preview" />

                        <Button
                            android:id="@+id/btn20"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/pfimage3_removebg_preview"
                            android:layout_below="@id/TextContributors"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"/>



                        <TextView
                            android:id="@+id/TextBtn7"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn18"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="40dp"
                            android:text="Earl"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/TextBtn8"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn19"
                            android:layout_alignStart="@id/btn19"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@id/TextBtn7"
                            android:text="Joseph"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextBtn9"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn20"
                            android:layout_alignStart="@id/btn20"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="25dp"
                            android:text="Kevin"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>