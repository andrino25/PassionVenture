<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34013f"
    android:padding="10dp"
    tools:context=".JobMatchingView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitleTextView"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:fontFamily="serif"
            android:text="JOB MATCHING"
            android:textColor="#FF9800"
            android:textSize="42dp" />


        <TextView
            android:id="@+id/TitleTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="140dp"
            android:fontFamily="serif"
            android:text="PassionVenture"
            android:textColor="#FF9800"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="294dp"
            android:layout_height="89dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-5dp"
            app:srcCompat="@drawable/p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="382dp"
                android:layout_height="336dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/job1" />

            <TextView
                android:id="@+id/TitleTextView14"
                android:layout_width="372dp"
                android:layout_height="88dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Over 1,000 jobs are waiting for you"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Button"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/black"
                android:text="Start Searching"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
